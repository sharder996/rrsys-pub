<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textReservationDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/reservation_details"
        android:textSize="24sp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/textDateLabel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/pick_date"
        android:textSize="18sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="190dp"/>

    <TextView
        android:id="@+id/textDateInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="*date info*"
        android:textSize="18sp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="190dp"/>


    <TextView
        android:id="@+id/textTimeLabel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/time"
        android:textSize="18sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="230dp"/>

    <TextView
        android:id="@+id/textTimeInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="*time info*"
        android:textSize="18sp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="230dp"/>

    <TextView
        android:id="@+id/textNumberOfPeopleLabel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/number_of_people"
        android:textSize="18sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="270dp"/>

    <TextView
        android:id="@+id/textNumberOfPeopleInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="*# people*"
        android:textSize="18sp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="270dp"/>

    <TextView
        android:id="@+id/textReservationCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reservation_code"
        android:textSize="18sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="310dp"/>

    <TextView
        android:id="@+id/textReservationCodeInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*reservation code*"
        android:textSize="18sp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="310dp"/>

    <Button
        android:id="@+id/buttonDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/done"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:onClick="buttonDoneOnClick"/>

    <ExpandableListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/expandListView"
            android:layout_marginStart="30dp"
            android:layout_marginTop="340dp">
    </ExpandableListView>

</RelativeLayout>