<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="comp3350.rrsys.presentation.ReceiptReservationActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="5">

        <TextView
            android:id="@+id/textThankYouMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reservation_thank_you"
            android:textSize="16sp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="100dp"
            android:layout_columnSpan="2"/>

        <TextView
            android:id="@+id/textReservationCodeMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:text="@string/reservation_code_message"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_columnSpan="2"/>

        <TextView
            android:id="@+id/textReservationCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:text="123456"
            android:textAlignment="center"
            android:textSize="40sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="120dp"
            android:layout_columnSpan="2"/>

        <TextView
            android:id="@+id/textReservationDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reservation_details"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:layout_columnSpan="2"/>

        <TextView
            android:id="@+id/textDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pick_date"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/textDateInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*date info*"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/textTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time"
            android:textSize="16sp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/textTimeInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*time info*"
            android:textSize="16sp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/textNumberOfPeopleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number_of_people"
            android:textSize="16sp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/textNumberOfPeopleInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*# people*"
            android:textSize="16sp"
            android:layout_marginTop="20dp"/>
    </GridLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/buttonDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/done"
            android:onClick="buttonHomeOnClick" />
    </RelativeLayout>

</LinearLayout>