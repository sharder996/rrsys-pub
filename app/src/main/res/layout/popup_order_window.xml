<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:contentDescription="popup_order_window"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#9F9494"
    android:gravity="center"
    android:columnCount="2"
    android:rowCount="4">

    <TextView
        android:id="@+id/textAddItemToOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/add_item_to_order"
        android:textSize="16sp"
        android:layout_columnSpan="2" />

    <TextView
        android:id="@+id/textQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="75dp"
        android:text="@string/quantity"
        android:textSize="16sp" />

    <NumberPicker
        android:id="@+id/editQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin" />

    <TextView
        android:id="@+id/textCustomizeOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:textSize="16sp"
        android:text="@string/customize_order" />

    <EditText
        android:id="@+id/editTextInstructions"
        android:layout_width="185dp"
        android:inputType="text"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_horizontal_margin" />

    <Button
        android:id="@+id/buttonPopupConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:text="@string/confirm"
        android:layout_gravity="end"
        android:layout_columnSpan="2" />

</GridLayout>